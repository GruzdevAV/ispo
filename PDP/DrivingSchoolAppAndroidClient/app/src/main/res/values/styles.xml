<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Text">
        <item name="android:textSize">12sp</item>
        <item name="android:layout_margin">5dp</item>
        <item name="android:padding">5dp</item>
        <item name="android:textColor">@color/text_lighter</item>
        <item name="android:textAllCaps">false</item>
    </style>
    <style name="TextField" parent="Text">
        <item name="android:textSize">24sp</item>
        <item name="android:background">@drawable/field</item>
        <item name="android:textColor">@color/text_darker</item>
        <item name="hintTextColor">@color/text_lighter</item>
    </style>
    <style name="MainButton" parent="TextField">
        <item name="android:background">@drawable/main_button</item>
        <item name="android:textColor">@color/white</item>
    </style>
    <style name="SecondaryButton" parent="TextField">
        <item name="android:background">@drawable/secondary_button</item>
    </style>
</resources>